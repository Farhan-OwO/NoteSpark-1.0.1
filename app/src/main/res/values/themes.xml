<resources>

    <!-- Base application theme. -->
    <style name="Theme.NoteSpark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4285F4</item>
        <item name="colorPrimaryVariant">#673AB7</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary"> #EA4335</item>
        <item name="colorSecondaryVariant">#FBBC05</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <!-- Set the splash screen background. -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>

        !-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/notesparklogowithname</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.NoteSpark</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
    </style>
</resources>