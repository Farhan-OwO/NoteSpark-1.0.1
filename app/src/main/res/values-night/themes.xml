<resources>
    <!-- Base application theme. -->
    <style name="Theme.NoteSpark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#64B5F6</item>
        <item name="colorPrimaryVariant">#9FA8DA</item>
        <item name="colorOnPrimary">#1E1E1E</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary"> #FF8A80</item>
        <item name="colorSecondaryVariant">#FFE57F</item>
        <item name="colorOnSecondary">#1E1E1E</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">#1A202A</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/notesparklogowithname</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.NoteSpark</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
    </style>
</resources>